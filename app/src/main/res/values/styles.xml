<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/arial_narrow_7</item>
        <item name="fontFamily">@font/arial_narrow_7</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Title" parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:layout_marginTop">@dimen/nav_header_vertical_spacing</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="Heading" parent="Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
    </style>

    <style name="TextViews" parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textColor">@color/andela_grey</item>
        <item name="android:layout_marginTop">@dimen/nav_header_vertical_spacing</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="ButtonViews" parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="android:paddingStart">@dimen/fab_margin_double</item>
        <item name="android:paddingEnd">@dimen/fab_margin_double</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="divider_light" parent="AppTheme">
        <item name="android:background">@android:color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:layout_marginTop">@dimen/nav_header_vertical_spacing</item>
        <item name="android:layout_marginBottom">@dimen/nav_header_vertical_spacing</item>
        <item name="android:alpha">0.12</item>
    </style>

</resources>
